rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function userDoc(uid) {
      return get(/databases/$(database)/documents/users/$(uid));
    }

    function isAdmin() {
      return isSignedIn() && userDoc(request.auth.uid).data.role == "admin";
    }

    function isBootstrapAdmin() {
      return isSignedIn() && request.auth.token.email in ["kimcestudio@gmail.com"];
    }

    match /users/{uid} {
      allow read, write: if isSignedIn() && request.auth.uid == uid;
      allow read: if isAdmin() || isBootstrapAdmin();
      allow list: if isAdmin() || isBootstrapAdmin();
    }
  }
}
