rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function userDoc(uid) {
      return get(/databases/$(database)/documents/users/$(uid));
    }

    function isAdmin() {
      return isSignedIn() && userDoc(request.auth.uid).data.role == "admin";
    }

    match /users/{uid} {
      allow read: if isSignedIn() && request.auth.uid == uid;
      allow write: if isSignedIn() && request.auth.uid == uid;
      allow read, list: if isAdmin();
      allow write: if isAdmin();
    }

    match /workSchedules/{scheduleId} {
      allow read, list: if isSignedIn();
      allow write: if isAdmin();
    }

    match /finance_movements/{docId} {
      allow read, list: if isAdmin();
      allow write: if isAdmin();
    }

    match /expenses/{docId} {
      allow read, list: if isAdmin();
      allow write: if isAdmin();
    }

    match /transfers/{docId} {
      allow read, list: if isAdmin();
      allow write: if isAdmin();
    }

    match /collaboratorPayments/{docId} {
      allow read, list: if isAdmin();
      allow write: if isAdmin();
    }

    match /collaborators/{docId} {
      allow read, list: if isAdmin();
      allow write: if isAdmin();
    }

    match /users/{uid}/hours/{hourId} {
      allow read, write: if isSignedIn() && request.auth.uid == uid;
      allow read, list: if isAdmin();
    }

    match /hourRequests/{requestId} {
      allow create: if isSignedIn() && request.auth.uid == request.resource.data.uid;
      allow read, list: if isSignedIn() && request.auth.uid == resource.data.uid;
      allow update: if isSignedIn() && request.auth.uid == resource.data.uid;
      allow read, list, update: if isAdmin();
    }
  }
}
